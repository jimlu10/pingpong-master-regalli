<%= form_for(@game, html: {class: "form-horizontal center"}) do |f| %>
  <% if @game.errors.any? %>
    <div class="alert alert-warning">
      <h4><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h4>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :game_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :game_date, {}, {class: "date form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :opponent_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :opponent_id, current_user.opponents, :id, :username, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :player_score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :player_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :opponent_score, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :opponent_score, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-default" %>
      <%= link_to 'cancel', games_path %>
    </div>
  </div>
<% end %>
